import java.util.Scanner;
public class AverageVelocity
{
    public static void main(String []args)
    {
        Scanner scanner = new Scanner(System.in);
        System.out.print("ENTER THE INITIAL VELOCITY V1(in m/s):");
        double v1 = scanner.nextDouble();
        System.out.print("ENTER THE FINAL VELOCITY V0(in m/s):");
        double v0 = scanner.nextDouble();
        System.out.print("ENTER THE TIME ELAPSED(in s):");
        double time = scanner.nextDouble();
        double acceleration = (v0-v1)/time;
        System.out.println("THE AVERAGE ACCELERATION IS: "+acceleration+" m/sÂ²");
        scanner.close();
    }
}
